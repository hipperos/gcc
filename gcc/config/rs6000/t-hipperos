# Multilibs for PowerPC HIPPEROS targets.

MULTILIB_OPTIONS =
MULTILIB_DIRNAMES =
MULTILIB_MATCHES =
MULTILIB_EXCEPTIONS =
MULTILIB_REQUIRED =

MULTILIB_OPTIONS += mcpu=e5500/mcpu=e6500
MULTILIB_DIRNAMES += e5500 e6500

MULTILIB_OPTIONS += m64
MULTILIB_DIRNAMES += 64

MULTILIB_OPTIONS += mno-spe/mno-altivec
MULTILIB_DIRNAMES += nospe noaltivec

# Enumeration of multilibs

MULTILIB_REQUIRED += mcpu=e5500/m64/mno-altivec
MULTILIB_REQUIRED += mcpu=e5500/m64
MULTILIB_REQUIRED += mcpu=e6500/m64/mno-altivec
MULTILIB_REQUIRED += mcpu=e6500/m64
